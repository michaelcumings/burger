<h1>Eat-Da-Burger!</h1>

<h2>Burgers to be devoured:</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      <li>

	{{name}}

        <button class="devour-it" data-id="{{id}}" data-newdevoured="{{devoured}}">
            Devour It!
        </button>

     </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers:</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
    <li>

        {{name}}

    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
