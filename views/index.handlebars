<div class="container">
<div class="banner"><img src="/assets/img/burger.png">

<h1>Eat-Da-Burger!</h1>
</div>
</div>

<div class="container">
<div class="column">
<h2>Burgers to be devoured:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>

	{{burger_name}}

        <button class="devour-it" data-id="{{id}}">
            Devour It!
        </button>

     </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="column">
<h2>Devoured Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>

        {{burger_name}}

    </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
